<Page
    x:Class="Money_Manager.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Money_Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="DimGray">

        <TextBlock FontSize="45" FontWeight="ExtraBold" FontStyle="Italic" Text="Money Manager" HorizontalAlignment="Stretch"/>
        <TextBlock Text="Username: " />
        <TextBox x:Name="tbUserName" />
        <TextBlock Text="Password: " />
        <PasswordBox x:Name="tbPassword" />
        <Button x:Name="btnEnter" Content="Login" HorizontalAlignment="Stretch" Margin="0,10,0,10" Click="btnEnter_Click"/>
        <Button x:Name="btnNewAccount" Content="New Account" HorizontalAlignment="Stretch" Margin="0, 10, 0, 10" Click="btnNewAccount_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0, 10, 0, 10" Click="btnExit_Click"/>


    </StackPanel>

</Page>
